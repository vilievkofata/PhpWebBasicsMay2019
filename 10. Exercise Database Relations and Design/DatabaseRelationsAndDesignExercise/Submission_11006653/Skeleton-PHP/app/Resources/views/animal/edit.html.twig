{% extends "base.html.twig" %}

{% block main %}
    <div class="wrapper">
        <main>
            <form class="animal-create" action="{{ path('edit', { id: animal.id }) }}" method="post">
                <div class="create-header">
                    Edit Animal Data
                </div>
                <div class="create-animal-item">
                    <div class="create-animal-item-label">Kind</div>
                    <input type="text" class="create-animal-item-content" name="animal[kind]" required
                           value="{{ animal.kind }}"/>
                </div>
                <div class="create-animal-item">
                    <div class="create-animal-item-label">Chip Number</div>
                    <input type="number" min="1" class="create-animal-item-content" name="animal[chipNumber]" required
                           value="{{ animal.chipNumber }}"/>
                </div>

                <div class="create-animal-item">
                    <div class="create-animal-item-label">Gender</div>

                    {% if animal.gender is same as("Male") %}
                        <div class="gender-select">
                            <div class="radio-div">
                                <input class="radio-input" type="radio" name="animal[gender]" value="Male" id="male"
                                       checked>
                                <label class="radio-label" for="male">Male</label>
                            </div>
                            <div class="radio-div">
                                <input class="radio-input" type="radio" name="animal[gender]" value="Female"
                                       id="female">
                                <label class="radio-label" for="female">Female</label>
                            </div>
                        </div>
                    {% else %}
                        <div class="gender-select">
                            <div class="radio-div">
                                <input class="radio-input" type="radio" name="animal[gender]" value="Male" id="male2">
                                <label class="radio-label" for="male2">Male</label>
                            </div>
                            <div class="radio-div">
                                <input class="radio-input" type="radio" name="animal[gender]" value="Female"
                                       id="female2" checked>
                                <label class="radio-label" for="female2">Female</label>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="create-button-holder">
                    <button type="submit" class="button">Edit Animal Data</button>
                    <a type="button" href="{{ path('homepage') }}" class="button">Back</a>
                </div>
                {{ form_row(form._token) }}
            </form>
        </main>
    </div>
{% endblock %}

